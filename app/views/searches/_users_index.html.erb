
  <table class="table bg-dark">
    <thead class="thead-light">
      <tr>
        <th scope="col">プロフィール画象</th>
        <th scope="col">名前</th>
        <th scope="col">性別</th>
        <th scope="col">自己紹介</th>
        <th scope="col">もっと知りたい！</th>
      </tr>
    </thead>
    <tbody>
   　  <% @users.each do |users| %>
      <tr>
        <th scope="row"><%= attachment_image_tag(users, :profile_image, style:"height: 80px; width: 80px;", fallback: "no_image.jpg") %></th>
         <td><%= users.name %></td>
         <td><%= users.gender %></td>
         <td><%= users.introduction %></td>
         <td><%= link_to "", user_path(users), class: "fas fa-id-card" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>