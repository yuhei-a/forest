<% if @users.present? && @posts.present? %>
  <%= render "layouts/sidebar" %>
  <div class="col-md-6">
    <h3>【検索結果】検索ワード:<%= @item %></h3>
    <h3>ユーザー</h3>
    <%= render "searches/users_index" %>
    <h3>投稿内容</h3>
    <%= render "searches/post_index" %>
  </div>
  <%= render "layouts/blog_infomation" %>
<% elsif @users.present? && @posts.empty? %>
  <%= render "layouts/sidebar" %>
  <div class="col-md-6">
    <h3>【ユーザーの検索結果】検索ワード:<%= @item %></h3>
    <h3>ユーザー名</h3>
    <%= render "searches/users_index" %>
  </div>
  <%= render "layouts/blog_infomation" %>

<% elsif @users.empty? && @posts.present? %>
  <%= render "layouts/sidebar" %>
  <div class="col-md-6">
    <h3>【投稿の検索結果】検索ワード:<%= @item %></h3>
    <h3>投稿内容</h3>
    <%= render "searches/post_index" %>
  </div>
  <%= render "layouts/blog_infomation" %>

<% else %>
  <body class="main-background">
  <%= render "layouts/sidebar" %>
    <div class="col-md-6">
      <h3>【検索結果】<%= @item %>に該当はありません</h3>
    </div>
  <%= render "layouts/blog_infomation" %>
</body>
<% end %>
