<body class="login-body text-center">
  <div class="form-body col-md-6">
    <h3>Enter the forest</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group has-icon">
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"e-mail", autocomplete: "email" %>
      </div>

      <div class="form-group has-icon">
        <%= f.password_field :password, class: "form-control", placeholder:"パスワード", autocomplete: "current-password" %>
      </div>

      <div class="checkbox mb-3">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <%= f.submit "Log in" ,class: "btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
  </div>
</body>
