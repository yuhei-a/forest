<%= render "layouts/sidebar" %>

<div class="col-md-9">
  <% @posts.each do |post| %>
    <table class="table table-info bg-dark">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">タイトル</th>
          <th scope="col">投稿日時</th>
          <th scope="col">いいね</th>
          <th scope="col">コメント</th>
          <th scope="col">リンク</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"></th>
          <td><%= post.title %></td>
          <td><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td>
            <div class="likes_<%= post.id %>">
                <%= render "likes/likes", post: post %>
            </div>
          </td>
          <td>
            <i class="far fa-comment-dots">
              <%= post.post_comments.count %>
            </i>
          </td>
          <td>
            <%= link_to "投稿詳細", post_path(post) %>
          </td>
        </tr>
  <% end %>
      </tbody>
    </table>
</div>