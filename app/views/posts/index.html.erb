<div class="col-md-7">
    <% @posts.each do |post| %>
    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
         <strong class="d-inline-block mb-2 text-primary"><%= attachment_image_tag(post, :post_image, style:"height: 100px; width: 100px;" ) %></strong>
            <h3 class="mb-0">
              <a class="text-dark"><%= post.user.name %></a>
            </h3>
            <h3 class="mb-0">
              <a class="text-dark"><%= post.title %></a>
            </h3>
            <div class="mb-1"><%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
            <div class="card-text">
              <div class="likes_<%= post.id %>">
               <%= render "likes/likes", post: post %>
              </div>
            </div>
            <div class="card-text mb-auto">
              <i class="far fa-comment-dots">
                <%= post.post_comments.count %>
              </i>
            </div>
            <div class="card-text mb-auto">
              <%= link_to "続きを読む", post_path(post) %>
            </div>
      </div>
    </div>
    <% end %>
    <%= paginate @posts %>
</div>


<aside class="col-md-3 blog-sidebar">
 <div class="p-3 mb-3 bg-light rounded">
    <h4 class="font-italic">other user</h4>
    <ol class="list-unstyled">
        <li><%= attachment_image_tag(@other_user, :profile_image, style:"height: 80px; width: 80px;", class: "image-circle", fallback: "no_image.jpg") %></li>
        <li><%= @other_user.name %></li>
        <li><%= @other_user.introduction %></li>
        <li><%= link_to "ユーザーぺージへ", user_path(@other_user) %></li>
    </ol>
  </div>

  <div class="p-3">
    <h4 class="font-italic">最新の投稿</h4>
    <ol class="list-unstyled mb-0">
      <% @recent_post.each do |post| %>
      <li><%= link_to post.created_at.strftime("%Y-%m-%d"), post_path(post) %></li>
    </ol>
      <% end %>
  </div>

  <div class="p-3">
      <h4 class="font-italic">Elsewhere</h4>
      <ol class="list-unstyled">
        <li><a href="#">GitHub</a></li>
        <li><a href="#">Twitter</a></li>
        <li><a href="#">Facebook</a></li>
      </ol>
  </div>
</aside>

