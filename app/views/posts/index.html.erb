
<% @posts.each do |posts_all| %>

 <%= attachment_image_tag(posts_all, :post_image, :fill, 50, 50) %>
 <%= posts_all.user.name %>
 <%= posts_all.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
 <%= posts_all.title %>
 <%= link_to "投稿詳細", post_path(posts_all) %>

<% end %>





<%= form_with model:@post, url:posts_path, local:true do |f| %>

 <%= f.label "タイトル" %>
 <%= f.text_field :title %>

 <%= f.label "画象" %>
 <%= f.attachment_field :post_image %>

 <%= f.label "本文" %>
 <%= f.text_field :content %>

 <%= f.submit "投稿する" %>

<% end %>