<%= render "layouts/sidebar" %>

<div class="col-md-9">
  <div class="post-img">
    <h3>投稿ページ</h3>
    <%= form_with model:@postnew, url:posts_path, local:true do |f| %>

     <%= f.label "タイトル" %>
     <%= f.text_field :title, class: "form-control" %><br>

     <%= f.label "画象" %>
     <%= f.attachment_field :post_image, class: "form-control-file" %><br>

     <%= f.label "タグ" %>
     <%= f.text_field :name, class: "form-control", placeholder: "スペースを開けるとタグが複数付けれます。" %><br>

     <%= f.label "本文" %>
     <%= f.text_area :content, class: "form-control" %><br>

     <%= f.submit "投稿する" %><br>
     <% end %>
     <br>
  </div>
</div>
