 <body class="main-background">
 
 <%= render "layouts/sidebar" %>

  <div class="col-md-6">
    <h3 class="text-center">いいねランキング</h3>
    <% @posts.each do |ranking| %>
    <div class="post-img card flex-md-row mb-4 shadow-sm h-md-250 bg-dark">
      <div class="card-body d-flex flex-column align-items-start">
          <strong class="d-inline-block mb-2"><%= attachment_image_tag(ranking, :post_image, style:"height: 100px; width: 100px;" ) %></strong>
            <h3 class="mb-0">
              <%= ranking.user.name %>
            </h3>
            <h3 class="mb-0">
              <%= ranking.title %>
            </h3>
            <div class="mb-1"><%= ranking.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
            <div class="card-text">
              <div class="likes_<%= ranking.id %>">
               <%= render "likes/likes", post: ranking %>
              </div>
            </div>
            <div class="card-text mb-auto">
              <i class="far fa-comment-dots">
                <%= ranking.post_comments.count %>
              </i>
            </div>
            <div class="card-text mb-auto">
              <%= link_to "続きを読む", post_path(ranking) %>
            </div>
      </div>
    </div>
    <% end %>
    <%= paginate @posts %>
  </div>

<%= render "layouts/blog_infomation" %>

</body>