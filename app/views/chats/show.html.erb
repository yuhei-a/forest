<body class="main-background">
  <%= render "layouts/sidebar" %>

  <div class="col-md-6">
    <h5>トークルーム</h5>
    <div class="my-8 p-3 bg-dark rounded shadow-sm">
      <h6 class="border-bottom border-gray pb-2 mb-0">メッセージ</h6>
        <div class="chat">
          <%= render "chats/chat", chats: @chats %>
        </div>
    </div><br>

    <div class="form-group">
      <%= form_with model: @chat, url: user_chats_path(@user) do |f| %>
        <%= f.text_area :message, class: "form-control" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信" %>
      <% end %>
    </div>
  </div>

  <%= render "layouts/blog_infomation" %>
</body>
