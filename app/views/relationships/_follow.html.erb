<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user.id), class: "btn btn-primary btn-lg btn-md fas fa-user-slash", method: :delete %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-primary btn-lg fas fa-user-plus", method: :post %>
  <% end %>
<% end %>