<header class="blog-header">
  <div class="row bg-dark flex-nowrap justify-content-between align-items-center">
      <% if user_signed_in? %>
        <div class="col-4">
          <a class="text-muted nav-item" ><%= link_to "", new_post_path, class: "fas fa-pencil-alt nav-link" %></a>
        </div>
        <div class="col-4 text-center">
          <%= link_to "forest", user_path(current_user), class: "navbar-brand nav-link" %></a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <a class="nav-item"><%= link_to "", destroy_user_session_path, method: :delete, class: "fas fa-door-open nav-link btn btn-danger" %></a>
        </div>
      <% else %>
        <div class="col-4">
          <a class="text-muted nav-item" ><%= link_to "about", about_path, class: "nav-link" %></a>
        </div>
        <div class="col-4 text-center">
          <%= link_to "forest", root_path, class: "nav-link blog-header-logo navbar-brand" %></a>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
          <a class="nav-item"><%= link_to "sign up", new_user_registration_path, class: "nav-link" %></a>
        </div>
      <% end %>
    </div>
  </header>