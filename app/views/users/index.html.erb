<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">プロフィール画象</th>
      <th scope="col">名前</th>
      <th scope="col">性別</th>
      <th scope="col">自己紹介</th>
      <th scope="col">もっと知りたい！</th>
    </tr>
  </thead>
  <tbody>
   　<% @user.each do |users| %>
    <tr>
      <th scope="row"><%= attachment_image_tag(users, :profile_image, style:"height: 80px; width: 80px;", fallback: "no_image.jpg") %></th>
       <td><%= users.name %></td>
       <td><%= users.gender %></td>
       <td><%= users.introduction %></td>
       <td><%= link_to "ユーザー詳細", user_path(users) %></td>
    </tr>
  </tbody>
  <% end %>
</table>