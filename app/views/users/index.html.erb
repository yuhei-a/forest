<div class="container">
    <% @user.each do |users| %>
      <div class="card mb-4 shadow-sm text-center">
        <div class="card-header">
          <h4 class="my-0 font-weight-normal"><%= users.name %></h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title"><%= attachment_image_tag(users, :profile_image, style:"height: 80px; width: 80px;", class: "image-circle", fallback: "no_image.jpg") %></h1>
          <ul class="list-unstyled mt-1 mb-4">
            <li><%= users.introduction %></li>
          </ul>
          <%= link_to "", user_path(users), class: "fas fa-id-card btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>



  <aside class="col-md-4 blog-sidebar">
    <div class="p-3 mb-3 bg-light rounded">
      <h4 class="font-italic">サイト検索</h4>
      <ol class="list-unstyled">
        <li>
          <%= form_tag(search_path, method: :get) do %>
            <%= text_field_tag 'item' %>
            <%= submit_tag '検索' %>
          <% end %>
        </li>
      </ol>
    </div>

    <div class="p-3 mb-3 bg-light rounded">
      <h4 class="font-italic">最新の投稿</h4>
      <ol class="list-unstyled">
        <% @recent_post.each do |post| %>
        <li><%= link_to post.created_at.strftime("%Y-%m-%d"), post_path(post) %></li>
        <% end %>
      </ol>
    </div>
  </aside>
</div>

