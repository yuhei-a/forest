<body class="main-background">

<%= render "layouts/sidebar" %>

<div class="col-md-6">
  　<h3 class="text-center">タイムライン</h3>
    <% @timelines.each do |timeline| %>
    <div class="post-img card flex-md-row mb-4 shadow-sm h-md-250 bg-dark">
      <div class="card-body d-flex flex-column align-items-start">
         <strong class="d-inline-block mb-2"><%= attachment_image_tag(timeline, :post_image, style:"height: 100px; width: 100px;" ) %></strong>
            <h3 class="mb-0">
              <%= timeline.user.name %>
            </h3>
            <h3 class="mb-0">
              <%= timeline.title %>
            </h3>
            <div class="mb-1"><%= timeline.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
            <div class="card-text">
              <div class="good_or_bad_<%= timeline.id %>">
               <%= render "posts/likeorunlike", post: timeline %>
              </div>
            </div>
            <div class="card-text mb-auto">
              <i class="far fa-comment-dots">
                <%= timeline.post_comments.count %>
              </i>
            </div>
            <div class="card-text mb-auto">
              <%= link_to "続きを読む", post_path(timeline) %>
            </div>
      </div>
    </div>
    <% end %>
</div>


<%= render "layouts/blog_infomation" %>

</body>