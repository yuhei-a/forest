      </div><br>
        </ul>
      </div>
</nav>

<div class="col-md-8">
  <div class="card flex-md-row mb-4 shadow-sm h-md-250 bg-dark">
    <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2"><%= @user.name %></strong>
              <h5 class="mb-0">
                <%= @user.gender %>
              </h5>
              <div class="mb-1"><%= @user.prefectures %></div>
              <p class="card-text mb-auto"><%= @user.introduction %></p>
              <p><%= @user.sign %></p>
              <p><%= @user.bloodtype %></p>
              <p>フォロー：<%= link_to "#{@user.follower.count}", following_user_relationships_path(@user) %></p>
              <p>フォロワー：<%= link_to "#{@user.followed.count}", followed_user_relationships_path(@user) %></p>
              <% if current_user == @user %>
              <p><%= link_to "", edit_user_path(@user), class: "fas fa-user-edit btn btn-primary" %></p>
              <% end %>
              <p class="mb-0">
                <% if current_user != @user %>
                  <p><%= link_to "", user_chat_path(@user), class: "far fa-envelope btn btn-primary btn-lg" %>
                  <%= render "relationships/follow", user: @user %>
                <% end %>
              </p>
    </div>
    <%= attachment_image_tag(@user, :profile_image, style:"height: 350px; width: 350px;", fallback: "no_image.jpg") %>
  </div>
</div>

<aside class="col-md-3 blog-sidebar">
  <div class="p-3 mb-3 bg-light rounded bg-dark">
    <h4 class="font-italic">サイト検索</h4>
    <ol class="list-unstyled">
      <li>
        <%= form_tag(search_path, method: :get) do %>
          <%= text_field_tag 'item' %>
          <%= submit_tag '検索' %>
        <% end %>
      </li>
    </ol>
  </div>


  <div class="p-3 mb-3 rounded bg-dark">
    <h4 class="font-italic">最新の投稿</h4>
    <ol class="list-unstyled">
      <% @recent_post.each do |post| %>
      <li><%= link_to post.created_at.strftime("%Y-%m-%d"), post_path(post) %></li>
      <% end %>
    </ol>
  </div>

</aside>

