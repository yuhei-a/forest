<%= render "layouts/sidebar" %>

<div class="col-md-6">
  <h5>プロフィール</h5>
  <div class="card flex-md-row mb-4 shadow-sm h-md-250 bg-dark">
    <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2"><%= @user.name %></strong>
              <h5 class="mb-0">
                <%= @user.gender %>
              </h5>
              <div class="mb-1"><%= @user.prefectures %></div>
              <p class="card-text mb-auto"><%= @user.introduction %></p>
              <p><%= @user.sign %></p>
              <p><%= @user.bloodtype %></p>
              <p>フォロー：<%= link_to "#{@user.follower.count}", following_user_relationships_path(@user) %></p>
              <p>フォロワー：<%= link_to "#{@user.followed.count}", followed_user_relationships_path(@user) %></p>
              <% if current_user == @user %>
              <p><%= link_to "", edit_user_path(@user), class: "fas fa-user-edit btn btn-primary" %></p>
              <% end %>
              <% if current_user != @user %>
              <p><%= link_to "", user_chat_path(@user), class: "far fa-envelope btn btn-primary btn-lg" %></p>
              <p><%= render "relationships/follow", user: @user %></p>
              <% end %>

    </div>
    <%= attachment_image_tag(@user, :profile_image, style:"height: 320px; width: 320px;", fallback: "no_image.jpg") %>
  </div>

   <h5>投稿一覧</h5>
   <% @my_posts.each do |my_post| %>
    <div class="card flex-md-row mb-4 shadow-sm h-md-250 bg-dark">
      <div class="card-body d-flex flex-column align-items-start">
         <strong class="d-inline-block mb-2"><%= attachment_image_tag(my_post, :post_image, style:"height: 100px; width: 100px;" ) %></strong>
            <h3 class="mb-0">
              <%= my_post.user.name %>
            </h3>
            <h3 class="mb-0">
              <%= my_post.title %>
            </h3>
            <div class="mb-1"><%= my_post.created_at.strftime("%Y-%m-%d %H:%M:%S") %></div>
            <div class="card-text">
              <div class="likes_<%= my_post.id %>">
               <%= render "likes/likes", post: my_post %>
              </div>
            </div>
            <div class="card-text mb-auto">
              <i class="far fa-comment-dots">
                <%= my_post.post_comments.count %>
              </i>
            </div>
            <div class="card-text mb-auto">
              <%= link_to "続きを読む", post_path(my_post) %>
            </div>
      </div>
    </div>
    <% end %>
</div>

<%= render "layouts/blog_infomation" %>

