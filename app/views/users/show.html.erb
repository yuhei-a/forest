<div class="col-md-6">
  <div class="card flex-md-row mb-4 shadow-sm h-md-250">
    <div class="card-body d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-primary"><%= @user.name %></strong>
              <h5 class="mb-0">
                <%= @user.gender %>
              </h5>
              <div class="mb-1"><%= @user.prefectures %></div>
              <p class="card-text mb-auto"><%= @user.introduction %></p>
              <p><%= @user.sign %></p>
              <p><%= @user.bloodtype %></p>
              <p>フォロー：<%= link_to "#{@user.follower.count}", following_user_relationships_path(@user) %></p>
              <p>フォロワー：<%= link_to "#{@user.followed.count}", followed_user_relationships_path(@user) %></p>
              <% if current_user == @user %>
              <p><%= link_to "", edit_user_path(@user), class: "fas fa-user-edit" %></p>
              <% end %>
              <p class="mb-0">
                <% if current_user != @user %>
                  <p><%= link_to "", user_chat_path(@user), class: "far fa-envelope btn btn-primary btn-lg" %>
                  <% if current_user.following?(@user) %>
                    <%= link_to "", user_relationships_path(@user.id), method: :delete, class: "btn btn-primary btn-lg btn-md fas fa-user-slash" %>
                  <% else %>
                    <%= link_to "", user_relationships_path(@user.id), method: :post, class: "btn btn-primary btn-lg fas fa-user-plus" %></p>
                  <% end %>
                <% end %>
              </p>
    </div>
    <%= attachment_image_tag(@user, :profile_image, style:"height: 350px; width: 350px;", fallback: "no_image.jpg") %>
  </div>
</div>

<aside class="col-md-3 blog-sidebar">
  <div class="p-3 mb-3 bg-light rounded">
    <h4 class="font-italic">other user</h4>
    <ol class="list-unstyled">
        <li><%= attachment_image_tag(@other_user, :profile_image, style:"height: 80px; width: 80px;", class: "image-circle", fallback: "no_image.jpg") %></li>
        <li><%= @other_user.name %></li>
        <li><%= @other_user.introduction %></li>
        <li><%= link_to "ユーザーページヘ", user_path(@other_user) %></li>
    </ol>
  </div>

  <div class="p-3">
    <h4 class="font-italic">最新の投稿</h4>
    <% @recent_post.each do |post| %>
      <ol class="list-unstyled mb-0">
        <li><%= link_to post.created_at.strftime("%Y-%m-%d"), post_path(post) %></li>
      </ol>
    <% end %>
  </div>

  <div class="p-3">
      <h4 class="font-italic">ユーザー</h4>
      <ol class="list-unstyled">
      </ol>
  </div>
</aside>

